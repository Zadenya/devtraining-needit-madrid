        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// 1. Create an object to store rows from a table
	var grChange = new GlideRecord('change_request');
	
	// 2. Build query
	grChange.addQuery('active','=','true');
	grChange.addQuery('cmdb_ci','=',current.cmdb_ci);
	
	
	// 3. Execute query
	grChange.query();
	
	// Initialize messages to list Caller's active Incidents
	var msg = "Other Change Requests for CI " + current.cmdb_ci.name + ": ";
	
	// 4. Process returned records
	while(grChange.next()){
		// add a new line to the message for each of the Caller's active Incidents
		msg = msg + grChange.getValue('name') + ": " + grChange.getValue('short_description') + " | ";
	}
	
	gs.addInfoMessage(msg);

})(current, previous);]]></script>
